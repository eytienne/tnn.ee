{
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"[json]": {
		"editor.wordWrap": "bounded",
		"editor.wordWrapColumn": 100,
	},
	"emeraldwalk.runonsave": {
		"commands": [
			{
				"match": "src/lib/assets/tnn.md",
				"cmd": "sed -i '/^[[:space:]]*$/d' \"${file}\""
			}
		]
	},
	"tailwindCSS.experimental.classRegex": [
		["cn`([^`]*)`"],
		["Classes=\"([^\"]*)\""]
	]
}
